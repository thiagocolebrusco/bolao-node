<%- include("../_layout/header") -%>
<form method="post">
    <div class="form-group row">
        <div class="col-md-12">
            <h4>Usuários</h4>
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-md-12">Nome</label>
        <input name="name" type="text" class="form-control col-md-12" value="<%=user.name%>">
    </div>
    <div class="form-group row">
        <label for="" class="col-md-12">Usuário</label>
        <input name="username" type="text" class="form-control col-md-12" value="<%=user.username%>">
    </div>
    <div class="form-group row">
        <label for="" class="col-md-12">Senha</label>
        <input name="password" type="password" class="form-control col-md-12" value="<%=user.password%>">
    </div>
    <div class="form-group row">
        <input type="submit" class="btn btn-primary" value="Salvar">
        <a class="btn btn-default" href="/usuarios">Voltar</a>
    </div>
    <% if(typeof message !== 'undefined') { %>
        <div class="alert alert-danger">
            <%-message%>
        </div>
    <% } %>
</form>
<%- include("../_layout/footer") -%>